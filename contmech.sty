\RequirePackage{mathtools}

% The common binary operators 
\newcommand{\dprodt}{\mathbin{\cdot\cdot}}
\newcommand{\dprod}{\mathbin{\vcentcolon}}
\newcommand{\cross}{\mathbin{\times}}
\renewcommand{\outer}{\mathbin{\otimes}}
\newcommand{\uouter}{\mathbin{\overline{\otimes}}} % Upper outer product
\newcommand{\louter}{\mathbin{\underline{\otimes}}} % Lower outer product

% Tensors
\renewcommand{\to}[1]{\text{\boldmath $#1$}} % First order tensor. Bold, cursive
%\newcommand{\ts}[1]{\text{\boldmath $\mathrm{#1}$}} % Second order tensor. Bold, straigt
\newcommand{\ts}[1]{\text{\boldmath $#1$}} % Second order tensor. Bold, straigt % TODO: Try \boldsymbol and \pmb
\newcommand{\td}[1]{\text{\boldmath $\mathcal{#1}$}} % Third order tensor. Bold, caligraphy
\newcommand{\tf}[1]{\text{\boldmath $\mathsf{#1}$}} % Fourth order tensor. Bold, sans-serif

\renewcommand{\vec}[1]{\underline{#1}} % Vectors
\newcommand{\mat}[1]{\underline{#1}} % Matrices (even if they are the same, keep them seperate if you ever wish to change it.

\newcommand{\majorT}{\mathrm{T}} % For major transpose, \ts A^\Tran
\newcommand{\minorT}{\mathrm{t}} % For minor transpose, \tf A^\tran

% Common decorations for tensors.
\DeclareMathOperator{\dev}{dev} % Deviatoric part
\DeclareMathOperator{\vol}{vol} % Volumetric part
\DeclareMathOperator{\sym}{sym} % Symmetric part
\DeclareMathOperator{\skw}{skw} % Skew part
\DeclareMathOperator{\sph}{sph} % Spherical part
\DeclareMathOperator{\trial}{tr} % Trial value
\DeclareMathOperator{\el}{e} % Elastic
\DeclareMathOperator{\pl}{p} % Plastic
\DeclareMathOperator{\eff}{e} % Effective value
\DeclareMathOperator{\alg}{a} % Algorithmic value
\DeclareMathOperator{\mean}{m} % Mean value
\DeclareMathOperator{\red}{red} % Reduced value
\DeclareMathOperator{\thres}{th} % Threshold value

% For typing out second order base indicies conveniently
\newcommand{\be}[1]{\to{e}_{#1}}
\newcommand{\bee}[2]{\to{e}_{#1}\otimes\to{e}_{#2}}
\newcommand{\beee}[3]{\to{e}_{#1}\otimes\to{e}_{#2}\otimes\to{e}_{#3}}
\newcommand{\beeee}[4]{\to{e}_{#1}\otimes\to{e}_{#2}\otimes\to{e}_{#3}\otimes\to{e}_{#4}}

% Outer math commands;
\newcommand{\defeq}{\overset{\mathrm{def}}{=}} % For definitions X \defeq Y + 1
%\newcommand{\defeq}{\coloneqq} % alternative

\newcommand{\nextts}[1]{\prescript{n}{}{#1}} % Next timestep.
\newcommand{\oldts}[1]{\prescript{n-1}{}{#1}} % Old timestep.

